<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.wit.hillfort">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_hillfort"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_hillfort"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activities.HillfortView"
            android:parentActivityName=".activities.HillfortListView"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.HillfortListView" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.EditLocationView"
            android:label="@string/title_activity_maps" />
        <activity android:name=".activities.SignInActivity" />
        <activity
            android:name=".activities.SignUpActivity"
            android:parentActivityName=".activities.SignInActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:parentActivityName=".activities.HillfortListView" />
        <activity
            android:name=".activities.HillfortMapView"
            android:label="@string/title_activity_hillfort_maps"></activity>
    </application>

</manifest>